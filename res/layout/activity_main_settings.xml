<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Select your favorite meal:" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginLeft="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/favoriteMeals"
                android:layout_width="match_parent"
                android:layout_height="123dp" >
            </ListView>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_below="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </RelativeLayout>

    <!--
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/timeSpinner"
        android:layout_marginBottom="28dp"
        android:layout_marginLeft="49dp"
        android:layout_toRightOf="@+id/textView1" >

        <com.zos.lunchcalendar.MultiSelectionSpinner
            android:id="@+id/daySpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    -->

    <Spinner
        android:id="@+id/daySpinner"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_above="@+id/saveSettings"
        android:layout_alignParentRight="true"
        android:entries="@array/days_to_notify" />

    <Button
        android:id="@+id/saveSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/daySpinner"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="23dp"
        android:layout_marginLeft="36dp"
        android:text="Save" />

    <com.zos.lunchcalendar.MultiSelectionSpinner
        android:id="@+id/mealSpinner"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_above="@+id/mealSpinner"
        android:layout_toRightOf="@+id/relativeLayout2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/timeSpinner"
        android:layout_alignLeft="@+id/scrollView1"
        android:text="When to notify" />

    <Spinner
        android:id="@+id/timeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/saveSettings"
        android:layout_toRightOf="@+id/relativeLayout2"
        android:entries="@array/time_clock" />

</RelativeLayout>